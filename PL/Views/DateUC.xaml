<UserControl x:Class="PL.Views.DateUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Calendar x:Name="date" HorizontalAlignment="Center" Margin="0"/>
        <Button Background="DodgerBlue"  Command="{Binding calendarCommand}" Content="Ok" FontWeight="Light" FontSize="20" Margin="0" Padding="30,5,30,5" HorizontalAlignment="Center"  />
    </StackPanel>
</UserControl>
